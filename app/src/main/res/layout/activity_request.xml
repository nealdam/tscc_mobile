<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/default_space"
    tools:context=".RequestActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tvNewRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Trash Infomation"
        android:textAlignment="center"
        android:textSize="@dimen/txt1" />

<!--    <ImageView-->
<!--        android:id="@+id/imageView1"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@id/tvNewRequest"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:layout_marginTop="10sp"-->
<!--        android:scaleType="fitCenter"-->
<!--        tools:srcCompat="@tools:sample/avatars" />-->

    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:columnWidth="120sp"
        android:numColumns="auto_fit" />

    <TextView
        android:id="@+id/txtImageNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Image number" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtImageNum"
        android:layout_marginTop="10sp"
        android:text="Trash type" />

    <Spinner
        android:id="@+id/spType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spType"
        android:layout_marginTop="10sp"
        android:text="Trash Width" />

    <Spinner
        android:id="@+id/spWidth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spWidth"
        android:layout_marginTop="10sp"
        android:text="Trash Size" />

    <Spinner
        android:id="@+id/spSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSendRequest"
        android:layout_width="@dimen/btn4"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLibrary"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/default_space"
        android:text="@string/send_request" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLibrary"
        android:layout_width="@dimen/btn4"
        android:layout_height="wrap_content"
        android:layout_below="@id/spSize"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/default_space"
        android:text="Image Library"
        app:backgroundTint="#4CAF50" />


</LinearLayout>