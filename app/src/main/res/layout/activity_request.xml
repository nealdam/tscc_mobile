<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:weightSum="9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.7"
        android:background="@color/titleBar"
        android:weightSum="6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_margin="5dp">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_arrow_back_white_50dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt2"
                android:text="Thông tin điểm rác"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/cardview_light_background"
                android:layout_centerVertical="true"/>
        </LinearLayout>

        <!--    <ImageView-->
        <!--        android:id="@+id/imageView1"-->
        <!--        android:layout_width="wrap_content"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:layout_below="@id/tvNewRequest"-->
        <!--        android:layout_centerHorizontal="true"-->
        <!--        android:layout_marginTop="10sp"-->
        <!--        android:scaleType="fitCenter"-->
        <!--        tools:srcCompat="@tools:sample/avatars" />-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.3"
        android:background="@color/gray"
        android:layout_margin="10dp">

        <GridView
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:horizontalSpacing="5dp"
            android:verticalSpacing="5dp"
            android:gravity="center"
            android:stretchMode="columnWidth"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>
        <!--android:columnWidth=""-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="4"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/txtImageNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Image number" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtImageNum"
                android:layout_weight="3"
                android:text="Loại rác"
                android:textSize="@dimen/txt3"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/spType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_marginTop="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spType"
            android:text="Khối lượng (ước tính)"
            android:layout_weight="3"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spWidth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spWidth"
                android:text="Kích thước (ước tính)"
                android:layout_weight="3"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/spSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="bottom"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/btnSendRequest"
            android:layout_width="@dimen/btn4"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnLibrary"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/default_space"
            android:text="@string/send_request"
            android:layout_weight="1"
            android:background="@drawable/button_register"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/btnLibrary"
            android:layout_width="@dimen/btn4"
            android:layout_height="wrap_content"
            android:layout_below="@id/spSize"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/default_space"
            android:text="Thêm ảnh"
            android:layout_weight="1"
            android:background="@drawable/button_login"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            style="?android:attr/borderlessButtonStyle"/>

    </LinearLayout>

</LinearLayout>